@model TechCompilerCo.Models.FornecedoresViewModel

@{
    ViewData["Title"] = "Fornecedores";
}

<div class="row">
    <div class="row">
        <div class="col-md-6">
            <span><b>SUA</b></span><br />
            <span><b>MECÂNICA</b></span>
        </div>

        <div class="col-md-6" style="text-align: right; font-size: 20px">
            <span><b>Fornecedores</b></span>
        </div>
    </div>

    <br />
    <br />
    <br />

    <div class="row col-md-12">
        <div class="col-md-1">
            <a class="btn btn-sm btn-success" href="@Url.Action("Excel", "Fornecedores")"><i class="fa fa-table"></i> Excel</a>
        </div>

        @if (Model.UsuarioAdm)
        {
            <div class="col-md-2">
                <a class="btn btn-sm btn-primary" href="@Url.Action("New", "Fornecedores" )"><i class="fa fa-plus-circle"></i> Novo</a>
            </div>
        }
        else
        {
            <span class="col-md-2"></span>
        }

        <div class="col-md-9 pull-right">
            <a href="@Url.Action("Index", "Home")" class="btn btn-sm btn-primary pull-right" style="border-radius: 8px"><i class="fa fa-door-open"></i> Voltar</a>
        </div>
    </div>

    <br />
    <br />
    <br />

    <div class="row">
        <table class="table col-sm-12 col-md-12 col-lg-12 col-xl-12 col-xxl-12" id="MinhaIndex">
            <thead>
                <tr>
                    @if (Model.UsuarioAdm)
                    {
                        <th></th>
                    }
                    <th>
                        Razão Social
                    </th>
                    <th>
                        Nome Fantasia
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Documento
                    </th>
                    <th>
                        Telefone
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var f in Model.Fornecedores)
                {
                    <tr>
                        @if (Model.UsuarioAdm)
                        {
                            <td>
                                <a class="btn btn-xs btn-primary" href="@Url.Action("Edit", "Fornecedores", new { id = f.CodigoFornecedor } )"><i class="fa fa-edit"></i></a>
                                <a class="btn btn-xs btn-danger" onclick="abrirModalExcluir(@f.CodigoFornecedor)"><i class="fa fa-trash"></i></a>
                            </td>
                        }
                        <td>
                            @f.RazaoSocial
                        </td>
                        <td>
                            @f.NomeFantasia
                        </td>
                        <td>
                            @f.Email
                        </td>
                        <td>
                            @f.Documento
                        </td>
                        <td>
                            @f.Telefone1
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div id="dialogExcluir" title="Excluir Fornecedor">

    <input type="hidden" id="CodigoFornecedorModal" />

    <div class="row">
        <div class="col-md-12" style="margin-bottom:20px">
            <p>Deseja realmente excluir o fornecedor?</p>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <a onclick="excluir($('#CodigoFornecedorModal').val())" class="btn btn-danger pull-right">Excluir</a>
            <button onclick="$('#dialogExcluir').dialog('close');" class="btn btn-default pull-right" style="margin-right: 5px" type="button">Cancelar</button>
        </div>
    </div>
</div>

@section Scripts{

    <script type="text/javascript" asp-append-version="true">
        $(document).ready(function () {
            $('#dialogExcluir').dialog({
                autoOpen: false,
                maxWidth: 500,
                width: $(window).width() * 0.5,
                height: $(window).height() * 0.3,
                modal: true
            });
        });

        function abrirModalExcluir(id, nome) {
            $('html, body').animate({ scrollTop: 0 }, 0);
            $('#dialogExcluir').dialog('open');

            $('#CodigoFornecedorModal').val(id);
        }

        function excluir(id) {
            $.ajax({
                url: '/Fornecedores/Delete',
                type: 'POST',
                data: {
                    id: id
                },
                success: function (s) {
                    document.location.reload();
                    console.log('Sucesso!');
                },
                error: function (e) {
                    alert('Erro ao Excluir Fornecedor!');
                    console.log(e);
                }
            });
        }
    </script>

}