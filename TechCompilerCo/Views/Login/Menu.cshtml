@{
    Layout = null;
}

<style>
    .menus {
        border: solid;
        border-radius: 8px;
        background-color: darkblue;
        text-align: center;
        height: 10vh;
        cursor: pointer
    }

    .tituloMenus {
        text-align: center;
        color: white
    }

    .iconMenus {
        color: white
    }

    .pull-right {
        float: right !important;
    }

    .pull-left {
        float: left !important
    }
</style>

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TechCompilerCo.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/all.min.css" />
    <link rel="stylesheet" href="~/css/fontawesome.min.css" />
    <title>Menu - TechCompilerCo</title>
</head>

<body>
    <div class="container" style="padding-top: 50px">
        <h1 style="text-align:center"><b>SUA</b></h1>
        <h1 style="text-align:center"><b>MECÂNICA</b></h1>

        <br />
        <br />
        <br />

        <div class="row">
            <div class="col-md-12">
                <div class="menus col-md-2" onclick="window.location.href='@Url.Action("Index", "Funcionarios")';">
                    <span class="tituloMenus">Funcionários</span> <br />
                    <i class="fa fa-people-group iconMenus"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="container" style="margin-top: 100px">
        <div class="row pull-right">
            <div class="col-md-2" style="width: 100%">
                <a class="btn btn-sm btn-danger" style="border-radius: 8px"><i class="fa fa-door-open"></i> Sair</a>
            </div>
        </div>
    </div>

    <script src="~/js/all.min.js"></script>
    <script src="~/js/fontawesome.min.js"></script>
</body>
</html>