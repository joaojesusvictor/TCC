@model TechCompilerCo.Models.ClientesViewModel

<input type="hidden" asp-for="CodigoUsuario" />

<div class="row">
    <div class="col-md-6">
        @if (Model.ModoEdit)
        {
            <div class="col-md-12">
                <div class="col-md-6">
                    <label class="form-label">Código Cliente</label>
                    <input asp-for="CodigoCliente" class="form-control" readonly />
                </div>

                <div class="col-md-6">
                    <label class="form-label">Data de Cadastro</label>
                    <input asp-for="DataInclusao" type="date" class="form-control" readonly />
                </div>
            </div>
        }

        <div class="col-md-12">
            <label class="form-label">Nome</label>
            <input asp-for="NomeCliente" maxlength="100" class="form-control" required />
        </div>

        <div class="col-md-6">
            <label class="form-label">Data Nascimento</label>
            <input asp-for="DataNascimento" type="date" class="form-control" />
        </div>

        <div class="row">
            <div class="col-md-6">
                <label class="form-label">Telefone</label>
                <input asp-for="Telefone1" maxlength="20" class="form-control" required />
            </div>

            <div class="col-md-6">
                <label class="form-label">Email</label>
                <input asp-for="Email" type="email" maxlength="100" class="form-control"  />
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <label class="form-label">Sexo</label>
                <select asp-for="Sexo" class="form-control" >
                    <option value=""></option>
                    <option value="F">F</option>
                    <option value="M">M</option>
                    <option value="O">O</option>
                </select>
            </div>
            <div class="col-md-6">
                <label class="form-label">Documento</label>
                <input asp-for="Documento" maxlength="20" class="form-control" required />
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="row">
            <div class="col-md-6">
                <label class="form-label">Cep</label>
                <input asp-for="Cep" maxlength="10" class="form-control"  />
            </div>

            <div class="col-md-4">
                <br />
                <a class="btn btn-sm btn-primary" onclick="buscarCep()">Localizar Cep</a>
            </div>
        </div>

        <div class="col-md-12">
            <label class="form-label">Endereço</label>
            <input asp-for="Endereco" maxlength="200" class="form-control"  />
        </div>

        <div class="row">
            <div class="col-md-6">
                <label class="form-label">Nº</label>
                <input asp-for="Numero" min="0" class="form-control"  />
            </div>

            <div class="col-md-6">
                <label class="form-label">Complemento</label>
                <input asp-for="Complemento" maxlength="100" class="form-control" />
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <label class="form-label">Bairro</label>
                <input asp-for="Bairro" maxlength="100" class="form-control" />
            </div>

            <div class="col-md-6">
                <label class="form-label">Cidade</label>
                <input asp-for="Cidade" maxlength="100" class="form-control" />
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <label class="form-label">Estado</label>
                <input asp-for="Uf" maxlength="2" class="form-control" />
            </div>

            <div class="col-md-6">
                <label class="form-label">Pais</label>
                <input asp-for="Pais" maxlength="50" class="form-control" />
            </div>
        </div>
    </div>
</div>